border-left-size = 0
line-size = 1

## Location ##

bottom = true
wm-restack = none
override-redirect = false

## Fonts ##

font-0 = Montserrat:style=Semibold:size=9;3
font-1 = "FontAwesome:pixelsize=8;3"

## Colours ##

background = ${color.bground}
foreground = ${color.fground}
border-color = ${color.bground}
## Miscellaneous ##
border-top-color = ${color.fground}

fixed-center = true
padding-left = 0 
padding-right = 0
module-margin = 0

modules-left = battery backlight pulseaudio-control wlan vpnstatus network networketh   
modules-center = 
modules-right = spotify 

tray-position = right
tray-detached = false
tray-maxsize = 16
tray-background = ${color.bground}
