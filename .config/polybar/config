############
# Bar Juno #
############

[bar/juno]

monitor = ${env:MONITOR:}
## Dimensions ##

width = 100%
height = 20
offset-y = 0
offset-x =0

border-top-size = 0
border-bottom-size = 1
border-right-size = 0
border-left-size = 0
line-size = 1

## Location ##

bottom = false
wm-restack = none
override-redirect = false

## Fonts ##

font-0 = Montserrat:style=Semibold:size=9;3
font-1 = "FontAwesome:pixelsize=8;3"

## Colours ##

background = ${color.bground}
foreground = ${color.white}
border-color = ${color.fground}
border-bottom-color = ${color.bground}
## Miscellaneous ##

fixed-center = true
padding-left = 2 
padding-right = 2
module-margin = 1.5

modules-left = title
modules-center = i3
modules-right = i3-mode date time

tray-position = none
tray-detached = true

###########
# Bar Io ##
###########

[bar/io]

## Dimensions ##

width = 100%
height = 20
offset-y = 0
offset-x =0

border-top-size = 1
border-bottom-size = 0
border-right-size = 0
border-left-size = 0
line-size = 1

## Location ##

bottom = true
wm-restack = none
override-redirect = false

## Fonts ##

font-0 = Montserrat:style=Semibold:size=9;3
font-1 = "FontAwesome:pixelsize=8;3"

## Colours ##

background = ${color.bground}
foreground = ${color.fground}
border-color = ${color.bground}
## Miscellaneous ##
border-top-color = ${color.fground}

fixed-center = true
padding-left = 2 
padding-right = 2
module-margin = 1.5

modules-left = pulseaudio-control backlight battery-combined memory cpu
modules-center = spotify
modules-right = networketh network vpnstatus wlan ethernet

tray-position = right
tray-detached = false


#############
## Modules ##
#############

### title ###
[module/title]
type = internal/xwindow

format = <label>
format-overline = ${color.orange}
format-foreground = ${color.modulefg}
format-padding = 2

label = %title%
label-maxlen = 30

#label-empty = Arch Linux
#label-empty-foreground = ${color.}
#label-empty-background = ${color.cyan}
#label-empty-padding = 2

### i3 ###
[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
enable-scroll = true 

#label-unfocused-foreground = ${color.accent}
#label-focused-foreground = #c5a9f9
#label-urgent-foreground = #ff0000

format = <label-state>

label-focused-overline = ${color.green}
label-visible-overline = ${color.cyan}
label-urgent-overline = ${color.red}
label-unfocused-overline = ${color.bground}
label-focused-foreground = ${color.green}
label-visible-foreground = ${color.modulefg}
label-urgent-foreground = ${color.modulefg}
label-unfocused-foreground = ${color.modulefg}

label-focused-padding = 2
label-urgent-padding = 2
label-visible-padding = 2
label-unfocused-padding = 2

## i3 mode menu ##
[module/i3-mode]

type = internal/i3
format = <label-mode>

label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

### time ###
[module/time]
type = internal/date

interval = 1.0

date =  %H:%M
format-overline = ${color.purple}
format-foreground = ${color.modulefg}
format-padding = 1

### date ###
[module/date]
type = internal/date
date =  %e %B - %A
label = %date%
format-overline = ${color.pink}
format-foreground = ${color.modulefg}
format-padding = 1


### backlight ###
[module/backlight]
type = internal/backlight

# Use the following command to list available cards:
# $ ls -1 /sys/class/backlight/
card = intel_backlight

format = <ramp> <label>
format-underline = ${color.orange}
format-foreground = ${color.modulefg}
format-padding = 1

label = %percentage%%

ramp-0 = 
ramp-1 = 
ramp-2 = 

### cpu ###
[module/cpu]
type = internal/cpu
label =  %percentage%%
format-underline = ${color.pink}
format-foreground = ${color.modulefg}
format-padding = 1

### memory ###
[module/memory]
type = internal/memory
label =  %gb_used%
format-underline = ${color.yellow}
format-foreground = ${color.modulefg}
format-padding = 1

### battery ###
[module/battery-combined]
type = custom/script
exec = ~/.config/polybar/scripts/battery-combined-shell.sh
interval = 10
label-background = ${color.green}
label-foreground = ${color.black}
label-padding = 1


### sound ###
[module/pulseaudio-control]
type = custom/script
tail = true
format-underline = ${color.cyan}
label-padding = 2
label-foreground = ${color.modulefg}

# Icons mixed from Font Awesome 5 and Material Icons
# You can copy-paste your options for each possible action, which is more
# trouble-free but repetitive, or apply only the relevant ones (for example
# --sink-blacklist is only needed for next-sink).
exec = pulseaudio-control --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
# click-middle = pulseaudio-control --sink-blacklist "alsa_output.pci-0000_01_00.1.hdmi-stereo-extra2" next-sink
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down

### spotify ###
[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
format-underline = ${color.purple}
format-foreground = ${color.modulefg}
format-padding = 1
exec = python /usr/bin/polybar-spotify -f '{artist}: {song}'
# ;control players (optional)
click-left = playerctl --player=spotify play-pause 
click-right = playerctl --player=spotify next 
click-middle = playerctl --player=spotify previous

## networking ##

### wifi ###
[module/wlan]
type = internal/network

interface = wlp0s20f3
# interface = wlp3s0

interval = 5

label-connected =  %essid%
format-connected-background = ${color.green}
format-connected-foreground = ${color.black}
format-connected-padding = 1
label-disconnected =  Not Connected
format-disconnected-background = ${color.red}
format-disconnected-foreground = ${color.modulefg}
format-disconnected-padding = 1

### wlan ###
[module/network]
type = internal/network
interface = wlp0s20f3
# interface = wlp3s0
label-connected =  %downspeed% |  %upspeed% | %local_ip%
format-connected-foreground = ${color.modulefg}

## ethernet ##
[module/networketh]
type = internal/network
interface = enp0s25
label-connected =  |  %downspeed% |  %upspeed% | %local_ip%
format-connected-foreground = ${color.black}
format-connected-background = ${color.yellow}
format-connected-padding = 1

### vpn ###
[module/vpnstatus]
type = custom/script
exec = ~/.config/polybar/scripts/vpn.sh
tail = true
format-foreground = ${color.green}
label = %output%


